generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Barber {
  id             String         @id @default(uuid())
  name           String
  email          String         @unique
  password       String
  slug           String         @unique
  createdAt      DateTime       @default(now())
  appointments   Appointment[]
  services       Service[]
  users          User[]
  availabilities Availability[]
}

model User {
  id           String        @id @default(uuid())
  name         String
  email        String
  createdAt    DateTime      @default(now())
  barberId     String
  appointments Appointment[]
  barber       Barber        @relation(fields: [barberId], references: [id])
}

model Service {
  id           String        @id @default(uuid())
  name         String
  price        Float
  duration     Int
  createdAt    DateTime      @default(now())
  barberId     String
  appointments Appointment[]
  barber       Barber        @relation(fields: [barberId], references: [id])
}

model Appointment {
  id        String   @id @default(uuid())
  date      DateTime
  createdAt DateTime @default(now())
  barberId  String
  userId    String
  serviceId String
  barber    Barber   @relation(fields: [barberId], references: [id])
  service   Service  @relation(fields: [serviceId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Availability {
  id        String @id @default(uuid())
  weekDay   Int // 0 = Domingo, 1 = Segunda, ...
  startTime String // "09:00"
  endTime   String // "18:00"

  barberId String
  barber   Barber @relation(fields: [barberId], references: [id])

  createdAt DateTime @default(now())
}
